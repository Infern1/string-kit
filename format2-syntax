


term( "^bblue!^R^+bright bold red!" ) ;


^b	blue
^B	bright blue
^c	cyan
^C	bright cyan
^g	green
^G	bright green
^k	black
^K	bright black
^m	magenta
^M	bright magenta
^r	red
^R	bright red
^w	white
^W	bright white
^y	yellow
^Y	bright yellow

^_	underline
^/	italic
^!	inverse
^+	bold (Strong)
^-	dim

^^	^

^:	reset

